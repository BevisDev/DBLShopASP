@using DBLShopASP.Models
@model List<cart>

@*<a style="color: #272727" href="@Url.Action("Cart","Cart")">
        <i class="fas fa-shopping-cart"></i>
        <span>( @ViewBag.Quantity )</span>
    </a>*@

<a style="color: #272727" href="#" uk-toggle="target: #offcanvas-flip2">
    <i class="fas fa-shopping-cart"></i>
    <span>( @ViewBag.Quantity )</span>
</a>
<div id="offcanvas-flip2" uk-offcanvas="flip: true; overlay: true">
    <div class="uk-offcanvas-bar" style="    background: white;
            width: 420px;letter-spacing:normal">

        <button class="uk-offcanvas-close" style="color:#272727" type="button" uk-close></button>

        <h3 style="font-size: 14px;
                color: #272727;
                text-transform: uppercase;
                margin: 3px 0 30px 0;
                font-weight: 500; letter-spacing: 2px;">
            Giỏ hàng

        </h3>
        <h3 style="font-size: 14px;
            color: red;
            text-align:center ">
            @ViewBag.message
        </h3>
        <div class="site-nav-container-last" style="color:#272727">
            <div class="cart-view clearfix">
                <table id="cart-view">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="item_1">
                                <td class="img">
                                    <a href="@Url.Action("Details","Product", new { id = @item.id })" title="@item.name">
                                        <img src="~/Content/images/shoes/@item.image">
                                    </a>
                                </td>
                                <td>
                                    <a class="pro-title-view" style="color: #272727" href="@Url.Action("Details","Product", new { id = @item.id })"
                                       title="@item.name">@item.name</a>

                                    <span class="pro-quantity-view">@item.quantity</span>
                                    <span class="pro-price-view"> @string.Format("{0:0,0}", item.unit_Price) đ /1c</span>
                                    <span class="remove_link remove-cart">
                                        <a href="@Url.Action("Delete","Cart", new { @Id = item.id })">
                                            <i style="color: #272727;"
                                               class="fas fa-times"></i>
                                        </a>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <span class="line"></span>
                <table class="table-total" style="margin-bottom:30px;">
                    <tbody>
                        <tr>
                            <td class="text-left">TỔNG TIỀN:</td>
                            <td class="text-right" id="total-view-cart">@String.Format("{0:0,0}", @ViewBag.Amount) đ</td>
                        </tr>

                    </tbody>
                </table>
                <div class="cart-action">
                    <a href="/Cart/cart" class="button btn-check is-aqua" style="text-decoration:none;color: black;">
                        <span>
                            Xem giỏ hàng
                        </span>
                    </a>
                    <a href="/Cart/Order" class="button btn-check" style="text-decoration:none;color: black; ">
                        <span>
                            Thanh toán
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .cart-action{
        display:flex;
        justify-content:space-between;
        align-items:center;
    }
  .cart-action a{
      text-align:center;
      
  }
  .btn-check{
      background-color: cornflowerblue;
  }
  .cart-action .is-aqua{
      background-color: aqua;
      margin-right: 15px;
  }
 
</style>