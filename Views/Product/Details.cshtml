
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!--  detail product -->
<main class="">

    <div id="product" class="productDetail-page">
        <!-- detail product chính -->
        <div class="container">
            <div class="row product-detail-wrapper">

                <div class="col-md-7 col-sm-12 col-xs-12">
                    <div class="product-image-detail box__product-gallery
                    scroll hidden-xs">
                        <ul id="sliderproduct" class="site-box-content
                      slide_product">

                            <li class="product-gallery-item gallery-item
                        current " id="imgg1a">
                                <img class="product-image-feature " src="~/Content/images/shoes/@Model.Image"
                                     alt="@Model.Image" grape="">
                            </li>

                        </ul>
                    </div>
                </div>

                <div class="col-md-5 col-sm-12 col-xs-12
                product-content-desc" id="detail-product">
                    <div class="product-content-desc-1">
                        <div class="product-title">
                            <h1>@Model.Name</h1>
                            <span id="pro_sku">Mã = @Model.Id</span>
                        </div>
                        <div class="product-price" id="price-preview"><span class="pro-price">@String.Format("{0:0,0}", @Model.Unit_Price) ₫</span></div>
                        <form id="add-item-form" action="/cart/add" method="post" class="variants clearfix">
                            <div class="select-swatch clearfix">
                              
                                <div id="variant-swatch-1" class="swatch clearfix" data-option="option2" data-option-index="1">


                                    <div class="select-swap">
                                        <div data-value="36" class="n-sd swatch-element
                            36">
                                            <input class="variant-1" id="swatch-1-36" type="submit" name="option2" value="39"
                                                   data-vhandle="36" checked="">

                                            <label for="swatch-1-36" class="sd">
                                                <span>39</span>
                                            </label>

                                        </div>
                                        <div data-value="37" class="n-sd swatch-element
                            37">
                                            <input class="variant-1" id="swatch-1-37" type="radio" name="option2" value="40"
                                                   data-vhandle="37">

                                            <label for="swatch-1-37">
                                                <span>40</span>
                                            </label>

                                        </div>
                                        <div data-value="38" class="n-sd swatch-element
                            38">
                                            <input class="variant-1" id="swatch-1-38" type="radio" name="option2" value="41"
                                                   data-vhandle="38">

                                            <label for="swatch-1-38">
                                                <span>41</span>
                                            </label>

                                        </div>
                                        <div data-value="38" class="n-sd swatch-element
                            38">
                                            <input class="variant-1" id="swatch-1-38" type="radio" name="option2" value="42"
                                                   data-vhandle="38">

                                            <label for="swatch-1-38">
                                                <span>42</span>
                                            </label>

                                        </div>
                                    </div>
                                </div>
                        
                            </div>
                            <div class="selector-actions">
                                <div class="quantity-area clearfix">
                                    <span class="text-quantity">Số lượng: </span>
                                    <input type="text" id="quantity" name="quantity" value="1" min="1" class="quantity-selector" disabled>
                                
                                </div>
                                <div class="wrap-addcart clearfix">
                                    <div class="row-flex">
                                        <div class="button btn-addtocart addtocart-modal add__cart">
                                            <a href="@Url.Action("Create", "cart", new { @id = @Model.Id, @strURL = Request.Url.ToString() })">
                                                Thêm Vào Giỏ Hàng
                                            </a>
                                        </div>
                                        <div class="button btn-addtocart addtocart-modal add__cart">
                                            <a href="@Url.Action("BuyNow", "Cart", new { @id = @Model.Id, @strURL = Request.Url.ToString() })">
                                                Mua Ngay
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="product-description">
                            <div class="title-bl">
                                <h2>Mô tả</h2>
                            </div>
                            <div class="description-content">
                                <div class="description-productdetail">
                                    @Model.Description
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="list-productRelated clearfix">
            <div class="heading-title text-center">
                <h2>Có thể bạn quan tâm</h2>
            </div>
            <div class="container">
                <div class="row">
                    @Html.Action("Random", "Product")

                </div>
            </div>



        </div>
    </div>
</main>

<style>
    .add__cart a {
        text-decoration: none;
        color: cyan;
    }

    .add__cart {
        margin-right:15px;
        margin-bottom: 15px;
    }
    .text-quantity{
        height:32px;
        width: 70px;
        display:inline-flex;
        justify-content: center;
        align-items:center;
        color: #272727;
        font-size: 15px;
        font-weight:500;
        margin-right:15px;
    }
   
    .quantity-area{
        display:flex;
        align-items:center;
    }

</style>


