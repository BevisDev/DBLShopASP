@using DBLShopASP.Models   

<div class="container">
    <a class="navbar-brand" href="/home/index">
        <img src="~/Content/images/DBL.png" class="logo-top" alt="" />
    </a>
    <div class="desk-menu collapse navbar-collapse justify-content-md-center" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/Home/Index">TRANG CHỦ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Product/Index">
                    BỘ SƯU TẬP
                    <i class="fa fa-chevron-down" aria-hidden="true"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">GIỚI THIỆU</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Blog">BLOG</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Contact">LIÊN HỆ</a>
            </li>

        </ul>
    </div>

    <!-- ACCOUNT-->
    <div id="my-account" uk-offcanvas="flip: true; overlay: true">
        <div class="uk-offcanvas-bar" style="    background: white;
            width: 350px;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <a style="color: #272727" href="/customer/login" class="user-link">

                        <i class="fas fa-user-alt"></i>
                        <span> Đăng Nhập</span>
                    </a>
                </li>
                <li class="list-group-item">
                    <a style="color: #272727" href="/customer/register" class="user-link">

                        <i class="fas fa-user-alt"></i>
                        <span> Đăng Kí</span>
                    </a>
                </li>
                <li class="list-group-item">
                    <a style="color: #272727" href="/Customer/logoff" class="user-link">

                        <i class="fas fa-user-alt"></i>
                        <span> Đăng Xuất</span>
                    </a>
                </li>
                <li class="list-group-item">

                    @{ if (Session["user"] == null)
                        {
                            <h3 style="color: blue; font-size: 16px">Tài Khoản</h3>
                        }
                        else
                        {
                            Customer cus = (Customer)Session["user"];
                           
                            <h3 style="color:red; font-size: 16px">
                                Xin Chào!  @cus.User_Name
                            </h3>

                        }

                    }
                </li>

            </ul>
        </div>
    </div>
    <div class="icon-ol">
        <a style="color: #272727" uk-toggle="target: #my-account" href="#">
            <i class="fas fa-user-alt"></i>
        </a>
        <div class="search-box wpo-wrapper-search" style="display:inline-block">

            <form action="/Search/searchName" class="searchform searchform-categoris ultimate-search">
                <div class="wpo-search-inner" style="display: inline">
                    <input required="" id="inputSearchAuto" name="keyword" maxlength="40" autocomplete="off"
                           class="searchinput input-search search-input" type="text" size="20"
                           placeholder="Tìm kiếm sản phẩm...">
                </div>
            </form>
            <div id="ajaxSearchResults" class="smart-search-wrapper ajaxSearchResults" style="display: none">
                <div class="resultsContent"></div>
            </div>
        </div>
        @Html.Action("cartPartial", "cart")
        <button class="navbar-toggler" type="button" uk-toggle="target: #offcanvas-flip1" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

    </div>

</div>

<style>
    .logo-top {
        width: 200px;
        height: 90px;
        object-fit: cover;
    }
</style>